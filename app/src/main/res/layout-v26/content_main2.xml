<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main2"
        tools:context=".Main2Activity">

    <Button
            android:text="@string/logar"
            android:layout_width="0dp"
            android:layout_height="53dp" android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="420dp" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="105dp"
            app:layout_constraintHorizontal_bias="1.0" android:onClick="clickClickMeButton"/>
    <Button
            android:text="@string/cadastre_se"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            android:layout_marginBottom="262dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0"/>
    <EditText
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/login"
            android:ems="10"
            android:id="@+id/editText"
            android:autofillHints="" app:layout_constraintTop_toBottomOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="@+id/button3"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="@string/login_celular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" android:onClick="clickClickMeButton"
            android:layout_marginTop="132dp" android:layout_marginBottom="26dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/editText"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="105dp"
    />
    <Button
            android:text="@string/esqueci_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/button2"
            app:layout_constraintStart_toStartOf="@+id/button"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText5"
            app:layout_constraintStart_toStartOf="@+id/button4" app:layout_constraintEnd_toEndOf="@+id/button2"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/button4"/>
</android.support.constraint.ConstraintLayout>